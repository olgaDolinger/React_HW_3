{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*", "*"]
    },
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "baseUrl": ".",
  "lib": ["es5", "es6", "es7", "es2017", "dom", "es2019.array"],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
